<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.demouser.boggle_cj.FinalActivity">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:text="Missed Words"
            android:fontFamily="casual"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:id="@+id/extraWords"
            android:layout_height="match_parent"
            android:layout_width="150dp" />


        <TextView
            android:layout_height="match_parent"
            android:id="@+id/boggleBoardText"
            android:textSize="18sp"
            android:layout_below="@+id/correct"
            android:layout_alignLeft="@+id/correct"
            android:layout_marginTop="10dp"
            android:layout_alignStart="@+id/correct"
            android:fontFamily="monospace"
            android:text="The BOARD"
            android:textColor="@android:color/black"
            android:layout_width="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Correct Words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:textSize= "22sp"
                android:textColor="@color/correct"
                android:id="@+id/correctWords"
                android:fontFamily="casual" />

            <TextView
                android:text="Your words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:id="@+id/correct"
                android:fontFamily="casual"
                android:textSize="20sp" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Wrong Words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:textSize= "22sp"
                android:textColor="@color/wrong"
                android:fontFamily="casual"
                android:id="@+id/wrongWords" />
            <TextView
                android:text="Your Words"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="48dp"
                android:fontFamily="casual"
                android:id="@+id/wrong"
                android:textSize="20sp" />

            <Button
                android:text="Play Again"
                android:layout_width="120dp"
                android:id="@+id/resetButton"
                android:layout_marginBottom="23dp"
                android:fontFamily="casual"
                android:background="@drawable/button_border"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/wrongWords"
                android:layout_alignEnd="@+id/wrongWords"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>



</LinearLayout>
